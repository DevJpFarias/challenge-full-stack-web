    "paths": {
      "/students": {
        "post": {
          "tags": ["Students"],
          "security": [
            { "bearerAuth": [] }
          ],
          "summary": "Create Student",
          "description": "Create a new Student",
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "RA": {
                      "type": "number"
                    },
                    "CPF": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "name": "Fulano",
                    "email": "fulano@mail.com",
                    "RA": 9999,
                    "CPF": "999.999.999-99"
                  }
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "Created",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "$ref": "#/definitions/schemas/Student"
                  }
                }
              }
            },
            "400": {
              "description": "Bad Request",
              "content": {
                "application/json": {
                  "schema": {
                    "example": {
                      "status": "error",
                      "message": "This email is already used"
                    }
                  }
                }
              }
            }
          }
        },
        "get": {
          "tags": ["Students"],
